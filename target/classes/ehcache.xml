		maxBytesLocalHeap="200m" />

	<cache name="floorNumberCache" eternal="false"
		memoryStoreEvictionPolicy="LRU" overflowToDisk="false"
		maxBytesLocalHeap="200m" />

	<cache name="unitNumberHighRiseCache" eternal="false"
		memoryStoreEvictionPolicy="LRU" overflowToDisk="false"
		maxBytesLocalHeap="200m" />

	<cache name="unitNumberLandedCache" eternal="false"
